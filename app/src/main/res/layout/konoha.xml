<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centre"
        android:textallCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/topView"
        android:layout_width="10dp"
        android:layout_height="100dp"
        android:background="#CD5C5C"
        app:layout_constraintBottom_toTopOf="@id/buttonCentre"
        app:layout_constraintEnd_toEndOf="@id/buttonCentre"
        app:layout_constraintStart_toStartOf="@id/buttonCentre" />

    <View
        android:id="@+id/bottomView"
        android:layout_width="10dp"
        android:layout_height="100dp"
        android:background="#8FBC8F"
        app:layout_constraintEnd_toEndOf="@id/buttonCentre"
        app:layout_constraintStart_toStartOf="@id/buttonCentre"
        app:layout_constraintTop_toBottomOf="@id/buttonCentre" />

    <View
        android:id="@+id/leftView"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:background="#FFA500"
        app:layout_constraintEnd_toStartOf="@id/buttonCentre"
        app:layout_constraintTop_toTopOf="@id/buttonCentre"
        app:layout_constraintBottom_toBottomOf="@id/buttonCentre"/>

    <View
        android:id="@+id/rightView"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:background="#87CEEB"
        app:layout_constraintStart_toEndOf="@id/buttonCentre"
        app:layout_constraintTop_toTopOf="@id/buttonCentre"
        app:layout_constraintBottom_toBottomOf="@id/buttonCentre"/>

    <TextView
        android:id="@+id/txtTopLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Top Left"
        android:textColor="@color/white"
        android:background="#5F9EA0"
        app:layout_constraintTop_toTopOf="@id/topView"
        app:layout_constraintStart_toStartOf="@id/leftView"/>

    <TextView
        android:id="@+id/txtTopRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Top Right"
        android:textColor="@color/white"
        android:background="#BDB76B"
        app:layout_constraintTop_toTopOf="@id/topView"
        app:layout_constraintEnd_toEndOf="@id/rightView"/>

    <TextView
        android:id="@+id/txtLeftBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Top Right"
        android:textColor="@color/white"
        android:background="#9370DB"
        app:layout_constraintBottom_toBottomOf="@id/bottomView"
        app:layout_constraintStart_toStartOf="@id/leftView" />

    <TextView
        android:id="@+id/txtRightBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Top Right"
        android:textColor="@color/white"
        android:background="#FF7F50"
        app:layout_constraintBottom_toBottomOf="@id/bottomView"
        app:layout_constraintEnd_toEndOf="@id/rightView"/>
</androidx.constraintlayout.widget.ConstraintLayout>